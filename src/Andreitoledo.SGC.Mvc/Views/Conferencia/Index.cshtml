@model List<Conferencia>
@{
    ViewData["Title"] = "Confirma excluir a conferência";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Conferencia" asp-action="Incluir">Adicionar nova conferencia</a>
    </div>
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />

    <h1 class="display-4">Listagem de Conferências</h1>

    <table class="table" id="table-conferencias">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Trilha</th>
                <th scope="col">Nome</th>
                <th scope="col">Tempo</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (Conferencia conferencia in Model)
                {
                    <tr>
                        <th scope="row">@conferencia.Id</th>
                        <td>@conferencia.Trilha</td>
                        <td>@conferencia.Nome</td>
                        <td>@conferencia.Tempo</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@conferencia.Id" asp-controller="Conferencia" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@conferencia.Id" asp-controller="Conferencia" asp-action="ExcluirConfirmacao">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
